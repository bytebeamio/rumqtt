{
    "private": true,
    "type": "module",
    "scripts": {
        "check": "npx npm-run-all --npm-path npm --serial check:*",
        "check:format": "npx prettier --check .",
        "check:lint": "npx eslint .",
        "check:markdown": "npx markdownlint \"**/*.md\"",
        "check:script": "npx shellcheck ./scripts/__commons.sh ./scripts/rumqttd/build.sh ./scripts/rumqttd/docker.sh",
        "check:spell": "npx cspell lint --config cspell.json --no-progress --show-context \"**\"",
        "check:type": "npx tsc --project ./tsconfig.json --noEmit",
        "fix": "npx npm-run-all --npm-path npm --serial fix:*",
        "fix:format": "npx prettier --write .",
        "fix:lint": "npx eslint --fix .",
        "fix:markdown": "npx markdownlint --fix \"**/*.md\""
    },
    "engines": {
        "node": ">= 18.12.0"
    },
    "devDependencies": {
        "@cspell/dict-docker": "^1.1.7",
        "@cspell/dict-golang": "^6.0.2",
        "@cspell/dict-node": "^4.0.2",
        "@cspell/dict-npm": "^5.0.7",
        "@cspell/dict-rust": "^4.0.1",
        "@cspell/dict-shell": "^1.0.3",
        "@cspell/dict-typescript": "^3.1.1",
        "@cspell/eslint-plugin": "^6.31.2",
        "@types/node": "^20.4.5",
        "@typescript-eslint/eslint-plugin": "^6.2.1",
        "@typescript-eslint/parser": "^6.2.1",
        "cspell": "^6.31.2",
        "eslint": "^8.46.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.1.0",
        "eslint-config-prettier": "^8.9.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-import": "^2.28.0",
        "eslint-plugin-tsdoc": "^0.2.17",
        "markdownlint": "^0.29.0",
        "markdownlint-cli": "^0.35.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.0.0",
        "prettier-plugin-sh": "^0.13.1",
        "shellcheck": "^2.2.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "mqtt-packet": "^8.2.0"
    }
}
